?>
<p style="margin:0; font-weight:normal; font-size:11px; line-height:15px; font-family:Helvetica, Arial, sans-serif;"><?php echo $this->htmlEscape($this->getMethod()->getTitle()) ?></p>

<?php if ($_specificInfo = $this->getSpecificInformation()):?>
<table cellspacing="0" cellpadding="0" border="0">
    <tbody>
    <?php foreach ($_specificInfo as $_label => $_value):?>
        <tr>
            <th style="font-weight:normal; font-size:11px; line-height:15px; font-family:Helvetica, Arial, sans-serif;" align="left"><?php echo $this->escapeHtml($_label)?>:</th>
            <td style="font-weight:normal; font-size:11px; line-height:15px; font-family:Helvetica, Arial, sans-serif;" align="left"><?php echo nl2br(implode($this->getValueAsArray($_value, true), "\n"))?></td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>
<?php endif;?>

<?php echo $this->getChildHtml()?>
