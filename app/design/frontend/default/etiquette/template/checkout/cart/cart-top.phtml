/**
 * Shoping cart top
 *
 * @see Mage_Checkout_Block_Cart_Top
 */

?>
<!--< ?php if ($this->getIsNeedToDisplaySideBar()):?>-->
<div class="rich-cart-container">

	<div class="rich-cart clearfix">
    
        <div class="section items">
          <?php $_cartQty = $this->getSummaryCount() ?>
          <h2 class="header">
          <?php if ($_cartQty>0): ?>
				<?php if ($_cartQty==1): ?>
                    <?php echo $this->__('1 item') ?>
                <?php else: ?>
                    <?php echo $this->__('%s items', $_cartQty) ?>
                <?php endif ?>
          <?php else: ?>
                <?php echo $this->__('0 items') ?>
          <?php endif ?>      
          </h2>
          	          
          <div class="content clearfix">
           
            <?php $_items = $this->getRecentItems() ?>
			<?php if(count($_items)): ?>
               
                <?php foreach($_items as $_item): ?>
                    <?php echo $this->getItemHtml($_item) ?>
                <?php endforeach; ?>
                
                
                <script type="text/javascript">decorateList('cart-sidebar', 'none-recursive')</script>
            <?php else: ?>
                <p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>
            <?php endif ?>
            
          </div><!-- end .content -->
        </div><!-- end .section.items -->
    	
        <div class="section total">
          <h2 class="header"><?php echo $this->__('Total') ?></h2>
        
          <div class="content">
            <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
            <?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?>
                <br />(<?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?>)
            <?php endif; ?>
          </div><!-- end .content -->
        </div><!-- end .section.total -->
        <div class="section shopping-bag">
          <h2 class="header"><?php echo $this->__('Shopping bag') ?></h2>
          <a href="#" class="close">Close</a>
        
          <div class="content">
				
      <?php // echo $this->getChildHtml('extra_actions') ?>
                    <button type="button" title="<?php echo $this->__('Checkout') ?>" class="checkout" onclick="setLocation('<?php echo $this->getUrl('checkout/cart') ?>')"><?php echo $this->__('Checkout') ?></button>
                

          </div><!-- end .content -->
        </div><!-- end .shopping-bag -->
  
    	<a href="<?php echo $this->getUrl('checkout/cart') ?>" class="view-shopping-bag">View Shopping Bag</a> 
	
    </div>
    
</div>
