<?php if (($_products = $this->getProductCollection()) && $_products->getSize()): ?>

<div class="new-arrivals clearfix">
            <div class="header">
              <h1><?php echo $this->__('New Arrivals') ?></h1>
            </div><!-- end .header -->
            
            <div class="inside">
              <div class="slides">
              
                <?php $_columnCount = $this->getColumnCount(); ?>
					<?php $i=0; foreach ($_products->getItems() as $_product): ?>
                        <?php if ($i++%$_columnCount==0): ?>
                        <div class="slide-group clearfix">
                        <?php endif ?>
                            <div class="slide<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>">
                                <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>" class="product-image">
                                
                                <img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(163) ?>" width="163" height="163" alt="<?php echo $this->htmlEscape($_product->getName()) ?>" />
                                
                                <span class="category-name"><?php echo $category->getName(); ?></span>
                                
                                <span class="title"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?> <span class="color"><?php echo $_product->getAttributeText('color') ?></span></span>
              					<span class="price"><?php echo $this->getPriceHtml($_product, true, '-new') ?></span>
                                             
                                </a>
                            </div>
                        <?php if ($i%$_columnCount==0 || $i==count($_products)): ?>
                        </div>
                        <?php endif ?>
                    <?php endforeach; ?>              
                
                
              </div><!-- end .slides -->
              
            </div><!-- end .inside -->
          </div><!-- end .new-arrivals -->

<h2 class="subtitle"></h2>

