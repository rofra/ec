/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<div class="inside">

<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>

    <?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(400).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" width="400" height="400" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
   
<?php else: ?>
    
        	
	<?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(400).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" width="400" height="400" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
           
<?php endif; ?>

<?php if (count($this->getGalleryImages()) > 0): ?>
    
		<?php
		    foreach( array( "alt1","alt2","alt3","alt4" ) as $type )
			{
			    
			    $file = $_product->getData( $type );
			    if( !$file || strpos( $file, "placeholder" ) !== false || strpos( $file, "no_selection" ) !== false )
				continue;
			    echo( "<!-- $file -->" );
			    ?>

           
                <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $file)->resize(400); ?>"width="400" height="400"  />
            
				<?php }  ?>
 
 <?php endif; ?>
   
</div>

